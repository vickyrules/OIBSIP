<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectUnitActivity"
    android:background="@color/black"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="1.5dp"
       android:scrollbarThumbVertical="@color/grey"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/metricTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metric Units"
                android:textColor="@color/grey"
                android:textSize="15sp"/>

            <RadioGroup
                android:id="@+id/radioGpMatric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/grey"/>

            <TextView
                android:id="@+id/imperialTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imperial Units"
                android:textColor="@color/grey"
                android:textSize="15sp"/>


            <RadioGroup
                android:id="@+id/radioGpImperial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">

            </RadioGroup>
            <View
                android:id="@+id/endViewLine"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/grey"/>


        </LinearLayout>





    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>