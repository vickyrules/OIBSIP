<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="iconstyle" parent="TextAppearance.AppCompat">

        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">15dp</item>
        <item name="elevation">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="shapeAppearance">@style/Circular</item>

    </style>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">44dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>


    </style>

    <style name="linearLayoutInnerStyle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="elevation">21dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_margin">20dp</item>



    </style>



    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
</resources>