<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stopwatch" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2962FF</item>
        <item name="colorPrimaryVariant">#2962FF</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">#7A7676</item>
        <item name="colorControlActivated">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white_window</item>
        <item name="android:windowLightStatusBar">true</item>





    </style>


</resources>