<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="Start"
        app:cornerRadius="12dp"
        android:foregroundTint="@color/purple_700"
        android:backgroundTint="@color/button_active"
        android:layout_gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <LinearLayout
        android:id="@+id/lap_pause_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
     >

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Lap"
            android:textAllCaps="false"
            android:id="@+id/lap"
            android:layout_weight="1"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/button_active"
            android:backgroundTint="@color/button_inativeDark"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Pause"
            android:id="@+id/pause"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/button_active"
            android:layout_gravity="center"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_resume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Reset"
            android:id="@+id/reset"
            android:textAllCaps="false"
            android:layout_weight="1"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/button_active"
            android:backgroundTint="@color/button_inativeDark"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resume"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Resume"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/button_active"
            android:layout_gravity="center"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>